<Application
    x:Class="ChatApp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:ChatApp.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <converters:EmptyStringToCollapsedConverter x:Key="EmptyStringToCollapsedConverter"/>
            <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
            <converters:ActiveStatusConverter x:Key="ActiveStatusConverter"/>
            <converters:ActiveStatusColorConverter x:Key="ActiveStatusColorConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
