<Page
    x:Class="ChatApp.Views.ChatPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー -->
        <Grid Grid.Row="0" Background="{ThemeResource SystemControlAcrylicElementBrush}" Padding="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="チャットアプリ" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                <Button Content="チャンネル編集" Command="{x:Bind ViewModel.OpenChannelEditCommand}"/>
                <Button Content="ユーザー管理" Command="{x:Bind ViewModel.OpenUserManagementCommand}"/>
            </StackPanel>
        </Grid>

        <!-- メインコンテンツ -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- チャンネル一覧 -->
            <Grid Grid.Column="0" BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}" BorderThickness="0,0,1,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Padding="16" Background="{ThemeResource LayerFillColorDefaultBrush}">
                    <TextBlock Text="チャンネル" FontSize="18" FontWeight="SemiBold"/>
                </StackPanel>

                <ListView Grid.Row="1"
                          ItemsSource="{x:Bind ViewModel.Channels, Mode=OneWay}"
                          SelectedItem="{x:Bind ViewModel.SelectedChannel, Mode=TwoWay}"
                          SelectionMode="Single">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="local:Channel">
                            <StackPanel Padding="8">
                                <TextBlock Text="{x:Bind Name}" FontWeight="SemiBold"/>
                                <TextBlock Text="{x:Bind Description}"
                                           FontSize="12"
                                           Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                           TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <!-- メッセージエリア -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- チャンネル名 -->
                <Border Grid.Row="0"
                        Background="{ThemeResource LayerFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                        BorderThickness="0,0,0,1"
                        Padding="16">
                    <TextBlock Text="{x:Bind ViewModel.SelectedChannel.Name, Mode=OneWay, FallbackValue='チャンネルを選択してください'}"
                               FontSize="20"
                               FontWeight="SemiBold"/>
                </Border>

                <!-- メッセージ一覧 -->
                <ScrollViewer Grid.Row="1" Padding="16">
                    <ItemsRepeater ItemsSource="{x:Bind ViewModel.Messages, Mode=OneWay}">
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate x:DataType="local:Message">
                                <StackPanel Margin="0,0,0,16">
                                    <TextBlock FontWeight="SemiBold">
                                        <Run Text="{x:Bind Username}"/>
                                        <Run Text="·" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                        <Run Text="{x:Bind CreatedAt}" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" FontSize="12"/>
                                    </TextBlock>
                                    <TextBlock Text="{x:Bind Content}" TextWrapping="Wrap" Margin="0,4,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                </ScrollViewer>

                <!-- メッセージ入力 -->
                <Grid Grid.Row="2"
                      Background="{ThemeResource LayerFillColorDefaultBrush}"
                      BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                      BorderThickness="0,1,0,0"
                      Padding="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                             PlaceholderText="メッセージを入力..."
                             Text="{x:Bind ViewModel.NewMessage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,8,0"
                             KeyDown="MessageTextBox_KeyDown"/>

                    <Button Grid.Column="1"
                            Content="送信"
                            Command="{x:Bind ViewModel.SendMessageCommand}"
                            Style="{StaticResource AccentButtonStyle}"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
